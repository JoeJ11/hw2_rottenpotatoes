-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path(), :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1, @rating_flag[rating] && true
  = submit_tag 'Refresh'

%table#movies
  %thead
    %tr
      %th{:class => (@flag == 'title') && "hilite"}= link_to 'Movie Title', movies_path(:sort_by => "title", :ratings => @rating_flag), :id => 'title_header'
      %th Rating
      %th{:class => (@flag == 'date') && "hilite"}= link_to 'Release Date', movies_path(:sort_by => "date", :ratings => @rating_flag), :id => 'release_date_header'
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path


